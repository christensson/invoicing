        <![endif]-->
        <link rel="stylesheet" href="page.css">
    </head>
    <body role="document">
      <nav class="navbar navbar-default navbar-fixed-top" id="app-navbar">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Invoices</a>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav" data-bind="foreach: mainViews">
              <li data-bind="if: \$data.location == 'main', css: { active : \$data.name == \$root.currentView() }">
                <a href="#" data-bind="click: \$root.selectView">
                    <span class="glyphicon" data-bind="css: \$data.icon" aria-hidden="true"></span>
                    <span data-bind="text: \$data.title"></span>
                </a>
              </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                    <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span><span data-bind="text: activeCompanyName"></span>
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu" >
                  <html-comment> ko foreach: companyList </html-comment>
                    <li data-bind="css: { active: \$data._id() == \$parent.activeCompanyId() }">
                      <a href='#' data-bind="click: \$root.selectCompany">
                        <span data-bind="text: \$data.name"></span>
                        <span data-bind="if: \$data._id() == \$parent.activeCompanyId()">
                          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        </span>
                      </a>
                    </li>
                  <html-comment> /ko </html-comment>
                  <li role="separator" class="divider"></li>
                  <html-comment> ko foreach: mainViews </html-comment>
                    <li data-bind="if: \$data.location == 'companyMenu'">
                      <a href='#' data-bind="click: \$root.selectView">
                          <span class="glyphicon" data-bind="css: \$data.icon" aria-hidden="true"></span>
                          <span data-bind="text: \$data.title"></span>
                      </a>
                    </li>
                  <html-comment> /ko </html-comment>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                    $data.user.username
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu" data-bind="foreach: mainViews">
                  <li data-bind="if: \$data.location == 'userMenu'">
                    <a href='#' data-bind="click: \$root.selectView">
                        <span class="glyphicon" data-bind="css: \$data.icon" aria-hidden="true"></span>
                        <span data-bind="text: \$data.title"></span>
                    </a>
                  </li>
                  <li data-bind="if: \$data.location == 'userMenuNoRoute'">
                    <a data-bind="attr: {href: \$data.name}">
                        <span class="glyphicon" data-bind="css: \$data.icon" aria-hidden="true"></span>
                        <span data-bind="text: \$data.title"></span>
                    </a>
                  </li>
                </ul>
              </li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </nav>
    <div id="layout">
        <div id="main" class="container">
            <include template="./notification.marko"/>

            <div id="app-companies" data-bind="visible: currentView() == 'companies'">
                <form>
                    <p>
                        <table class="table table-striped table-condensed">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Company Name</th>
                                    <th>Address 1</th>
                                    <th>Address 2</th>
                                    <th>Address 3</th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: companyList">
                                <tr data-bind="css: { info: _id() == \$parent.activeCompanyId() }">
                                    <td>
                                      <div class="btn-group">
                                        <button type="button" class="btn btn-danger" data-bind="click: \$parent.deleteCompany">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        </button>
                                        <a class="btn btn-info" data-bind="attr: { href: '#/page/company_show/' + _id() }">
                                            <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
                                        </a>
                                        <button type="button" class="btn btn-info" data-bind="click: \$parent.activateCompany, disable: _id() == \$parent.activeCompanyId()">
                                            <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                                        </button>
                                      </div>
                                    </td>
                                    <td><p class="form-control-static" data-bind="text: name"></p></td>
                                    <td><p class="form-control-static" data-bind="text: addr1"></p></td>
                                    <td><p class="form-control-static" data-bind="text: addr2"></p></td>
                                    <td><p class="form-control-static" data-bind="text: addr3"></p></td>
                                </tr>
                            </tbody>
                        </table>
                    </p>

                    <div class="btn-group">
                      <a href="#/page/company_new" type="button" class="btn btn-success">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        New company
                      </a>
                    </div>
                </form>
            </div>

            <div id="app-company_new" data-bind="visible: currentView() == 'company_new' || (currentView() != undefined && currentView().search('company_show') == 0)">
                <div class="form-horizontal">
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <h3 class="panel-title">General info</h3>
                    </div>
                    <div class="panel-body">
                      <div class="form-group">
                        <label for="name" class="col-sm-2 control-label">Company name</label>
                        <div class="col-sm-4">
                          <input type="text" id="name" class="form-control" data-bind="value: data.name, css: data.hasErrorCss"></input>
                        </div>
                      </div>
                      <div for="idx in [1,2,3]">
                        <div class="form-group">
                          <label for="addr${idx}" class="col-sm-2 control-label">Address ${idx}</label>
                          <div class="col-sm-4">
                            <input type="text" id="addr${idx}" class="form-control" data-bind="value: data.addr${idx}"></input>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <h3 class="panel-title">Contact info</h3>
                    </div>
                    <div class="panel-body">
                      <div for="idx in [1,2,3]">
                        <div class="form-group">
                          <label for="contact${idx}Cap" class="col-sm-1 control-label">Caption ${idx}</label>
                          <div class="col-sm-4">
                            <input type="text" id="contact${idx}Cap" class="form-control" data-bind="value: data.contact${idx}Caption"></input>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="contact${idx}" class="col-sm-1 control-label">Info ${idx}</label>
                          <div class="col-sm-4">
                            <input type="text" id="contact${idx}" class="form-control" data-bind="value: data.contact${idx}"></input>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <h3 class="panel-title">Payment options</h3>
                    </div>
                    <div class="panel-body">
                      <div for="idx in [1,2]">
                        <div class="form-group">
                          <label for="pay${idx}Cap" class="col-sm-1 control-label">Caption ${idx}</label>
                          <div class="col-sm-4">
                            <input type="text" id="pay${idx}Cap" class="form-control" data-bind="value: data.payment${idx}Caption"></input>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="pay${idx}" class="col-sm-1 control-label">Info ${idx}</label>
                          <div class="col-sm-4">
                            <input type="text" id="pay${idx}" class="form-control" data-bind="value: data.payment${idx}"></input>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <h3 class="panel-title">Logo</h3>
                    </div>
                    <div class="panel-body">
                      <div class="row">
                        <form class="form-horizontal"
                              action="/api/company_logo"
                              accept="image/gif, image/jpeg, image/png"
                              method="POST"
                              enctype="multipart/form-data"
                              data-bind="submit: uploadLogo">
                          <div class="col-sm-6">
                            <div class="input-group">
                              <input type="file" name="logo" id="companyLogoInput" class="form-control" placeholder="Select logo...">
                              <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                  <span class="glyphicon glyphicon-upload" aria-hidden="true"></span>
                                  Upload
                                </button>
                              </span>
                            </div>
                          </div>
                        </form>
                      </div>
                      <div class="row">
                        <div class="col-sm-6">
                          <img alt="Company Logo" id="companyLogoImg" data-bind="attr: { src: logoPath }" class="img-thumbnail"/>
                        </div>
                      </div>
                    </div>
                  </div>
                  <br/>
                  <div class="btn-group">
                    <button type="button" class="btn btn-success" data-bind="click: saveCompany">
                      <span class="glyphicon glyphicon-save" aria-hidden="true"></span>
                      Save
                    </button>
                  </div>
                </div>
            </div>

            <div id="app-customer" data-bind="visible: currentView() == 'customers'">
                <form>
                    <p>
                        <table class="table table-striped table-condensed">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Address 1</th>
                                    <th>Address 2</th>
                                    <th>Phone</th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: customerList">
                                <tr>
                                    <td>
                                        <a href="#" class="btn btn-danger" data-bind="click: \$parent.deleteCustomer">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        </a>
                                    </td>
                                    <td><p class="form-control-static" data-bind="text: cid, visible: isValid"></p></td>
                                    <td><input type="text" class="form-control" data-bind="value: name, css: hasErrorCss"></input></td>
                                    <td><input type="text" class="form-control" data-bind="value: addr1"></input></td>
                                    <td><input type="text" class="form-control" data-bind="value: addr2"></input></td>
                                    <td><input type="text" class="form-control" data-bind="value: phone"></input></td>
                                </tr>
                            </tbody>
                        </table>
                    </p>

                    <div class="btn-group">
                        <button type="button" class="btn btn-success" data-bind="click: newCustomer">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            New customer
                        </button>
                        <button href="#" type="button" class="btn btn-default" data-bind="click: doCustomersReport">
                            <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
                            Generate report
                        </button>
                    </div>
                </form>
            </div>

            <div id="app-invoices" data-bind="visible: currentView() == 'invoices'">
                <form>
                    <p>
                        <table class="table table-striped table-condensed">
                            <colgroup>
                              <col class="col-md-1">
                              <col class="col-md-1">
                              <col class="col-md-1">
                              <col class="col-md-2">
                              <col class="col-md-3">
                              <col class="col-md-2">
                              <col class="col-md-1">
                              <col class="col-md-1">
                            </colgroup>
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                      Id
                                      <button type="button" class="btn btn-default btn-xs" data-bind="click: doSortToggle('iid')">
                                          <span data-bind="if: invoiceListSort() !== 'iidAsc'">
                                              <span class="glyphicon glyphicon-sort-by-attributes" aria-hidden="true"></span>
                                          </span>
                                          <span data-bind="if: invoiceListSort() === 'iidAsc'">
                                              <span class="glyphicon glyphicon-sort-by-attributes-alt" aria-hidden="true"></span>
                                          </span>
                                      </button>
                                    </th>
                                    <th>
                                      Date
                                      <button type="button" class="btn btn-default btn-xs" data-bind="click: doSortToggle('date')">
                                          <span data-bind="if: invoiceListSort() !== 'dateAsc'">
                                              <span class="glyphicon glyphicon-sort-by-attributes" aria-hidden="true"></span>
                                          </span>
                                          <span data-bind="if: invoiceListSort() === 'dateAsc'">
                                              <span class="glyphicon glyphicon-sort-by-attributes-alt" aria-hidden="true"></span>
                                          </span>
                                      </button>
                                    </th>
                                    <th>
                                      Customer Id
                                      <button type="button" class="btn btn-default btn-xs" data-bind="click: doSortToggle('cid')">
                                          <span data-bind="if: invoiceListSort() !== 'cidAsc'">
                                              <span class="glyphicon glyphicon-sort-by-attributes" aria-hidden="true"></span>
                                          </span>
                                          <span data-bind="if: invoiceListSort() === 'cidAsc'">
                                              <span class="glyphicon glyphicon-sort-by-attributes-alt" aria-hidden="true"></span>
                                          </span>
                                      </button>
                                    </th>
                                    <th>
                                      Customer
                                      <button type="button" class="btn btn-default btn-xs" data-bind="click: doSortToggle('customer')">
                                          <span data-bind="if: invoiceListSort() !== 'customerAsc'">
                                              <span class="glyphicon glyphicon-sort-by-attributes" aria-hidden="true"></span>
                                          </span>
                                          <span data-bind="if: invoiceListSort() === 'customerAsc'">
                                              <span class="glyphicon glyphicon-sort-by-attributes-alt" aria-hidden="true"></span>
                                          </span>
                                      </button>
                                    </th>
                                    <th>
                                      Total Excl. VAT
                                      <button type="button" class="btn btn-default btn-xs" data-bind="click: doSortToggle('totalExclVat')">
                                          <span data-bind="if: invoiceListSort() !== 'totalExclVatAsc'">
                                              <span class="glyphicon glyphicon-sort-by-attributes" aria-hidden="true"></span>
                                          </span>
                                          <span data-bind="if: invoiceListSort() === 'totalExclVatAsc'">
                                              <span class="glyphicon glyphicon-sort-by-attributes-alt" aria-hidden="true"></span>
                                          </span>
                                      </button>
                                    </th>
                                    <th>
                                      Paid
                                      <button type="button" class="btn btn-default btn-xs" data-bind="click: doSortToggle('paid')">
                                          <span data-bind="if: invoiceListSort() !== 'paidAsc'">
                                              <span class="glyphicon glyphicon-sort-by-attributes" aria-hidden="true"></span>
                                          </span>
                                          <span data-bind="if: invoiceListSort() === 'paidAsc'">
                                              <span class="glyphicon glyphicon-sort-by-attributes-alt" aria-hidden="true"></span>
                                          </span>
                                      </button>
                                      <button type="button" class="btn btn-default btn-xs" data-bind="click: doToggleShowPaid">
                                          <span data-bind="if: showPaid">
                                              <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                                          </span>
                                          <span data-bind="ifnot: showPaid">
                                              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                          </span>
                                      </button>
                                    </th>
                                    <th>
                                      Credit
                                      <button type="button" class="btn btn-default btn-xs" data-bind="click: doSortToggle('credit')">
                                          <span data-bind="if: invoiceListSort() !== 'creditAsc'">
                                              <span class="glyphicon glyphicon-sort-by-attributes" aria-hidden="true"></span>
                                          </span>
                                          <span data-bind="if: invoiceListSort() === 'creditAsc'">
                                              <span class="glyphicon glyphicon-sort-by-attributes-alt" aria-hidden="true"></span>
                                          </span>
                                      </button>
                                      <button type="button" class="btn btn-default btn-xs" data-bind="click: doToggleShowCredit">
                                          <span data-bind="if: showCredit">
                                              <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                                          </span>
                                          <span data-bind="ifnot: showCredit">
                                              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                          </span>
                                      </button>
                                    </th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: invoiceList">
                                <tr data-bind="if: (!isPaid() || (\$root.showPaid() && isPaid())) && (!isCredit() || (\$root.showCredit() && isCredit())),
                                               css: { danger: (!isPaid() && isOverdue()) }">
                                    <td>
                                      <div class="btn-group">
                                        <a class="btn btn-info" data-bind="attr: { href: '#/page/invoice_show/' + _id() }">
                                            <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
                                        </a>
                                        <a class="btn btn-info" data-bind="click: printInvoice">
                                            <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
                                        </a>
                                      </div>
                                    </td>
                                    <td>
                                      <p>
                                        <span class="form-control-static" data-bind="text: iid"></span>
                                        <span data-bind="if: isLocked">
                                          <span class="form-control-static glyphicon glyphicon-lock" aria-hidden="true"></span>
                                        </span>
                                      </p>
                                    </td>
                                    <td><p class="form-control-static" data-bind="text: date"></p></td>
                                    <td><p class="form-control-static" data-bind="text: customer().cid"></p></td>
                                    <td><p class="form-control-static" data-bind="text: customer().name"></p></td>
                                    <td><p class="form-control-static" data-bind="text: totalExclVat"></p></td>
                                    <td>
                                        <p>
                                          <span data-bind="if: isPaid">
                                            <span class="form-control-static glyphicon glyphicon-ok" aria-hidden="true"></span>
                                          </span>
                                        </p>
                                    </td>
                                    <td>
                                        <p>
                                          <span data-bind="if: isCredit">
                                            <span class="form-control-static glyphicon glyphicon-ok" aria-hidden="true"></span>
                                          </span>
                                        </p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </p>

                    <div class="btn-group">
                        <a href="#/page/invoice_new" type="button" class="btn btn-success">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            New invoice
                        </a>
                    </div>
                </form>
            </div>

            <div id="app-invoice_new" data-bind="visible: currentView() == 'invoice_new' || (currentView() != undefined && currentView().search('invoice_show') == 0)">
                <div class="row">
                    <div class="col-md-8 panel panel-default">
                        <div class="panel-heading">
                          <h3 class="panel-title">
                            <span data-bind="ifnot: data.iid() === undefined">
                              <span data-bind="if: data.isCredit">Credit</span> Invoice #<span data-bind="text: data.iid"></span>
                            </span>
                            <span data-bind="if: data.iid() === undefined">
                              New <span data-bind="if: data.isCredit">Credit</span> Invoice
                            </span>
                            <span data-bind="if: data.isLocked">
                                <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                            </span>
                          </h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <label for="customerId" class="control-label">Customer</label>
                                        <br/> <!-- br needed to put input below on new line for some strange reason... -->
                                        <select class="form-control" id="customerId"
                                          data-bind="options: customerList, value: selectedCustomer, disable: data.isLocked,
                                                    optionsCaption: 'Choose...'">
                                        </select>
                                        <!--
                                        <input type="text" class="form-control" id="customerId" data-bind="typeahead: customerList, disable: data.isLocked"></input>
                                        -->
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <label for="yourReference" class="control-label">Your reference</label>
                                        <input type="text" class="form-control" id="yourReference" data-bind="value: data.yourRef, disable: data.isLocked"></input>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <label for="date" class="control-label">Date</label>
                                        <input type="date" class="form-control" id="date" data-bind="value: data.date, disable: data.isLocked"></input>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <label for="ourReference" class="control-label">Our reference</label>
                                        <input type="text" class="form-control" id="ourReference" data-bind="value: data.ourRef, disable: data.isLocked"></input>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <label for="daysUntilPayment" class="control-label">Days until payment</label>
                                        <input type="number" class="form-control" id="daysUntilPayment" data-bind="value: data.daysUntilPayment, disable: data.isLocked"></input>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <label for="projectId" class="control-label">Project id</label>
                                        <input type="text" class="form-control" id="projectId" data-bind="value: data.projId, disable: data.isLocked"></input>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 panel panel-default">
                        <div class="panel-heading"><h3 class="panel-title">Customer details</h3></div>
                        <div class="panel-body">
                            <form class="form-horizontal">
                                <div>
                                    <p class="form-control-static">
                                        Customer Id:
                                        <span data-bind="text: data.customer().cid"></span>
                                    </p>
                                </div>
                                <address>
                                    <strong><span data-bind="text: data.customer().name"></span></strong><br/>
                                    <span data-bind="text: data.customer().addr1"></span><br/>
                                    <span data-bind="text: data.customer().addr2"></span>
                                </address>
                            </form>
                        </div>
                    </div>
                </div>

                <p>
                </p>

                <div class="row">
                    <div class="col-md-12 panel panel-default">
                        <div class="panel-heading"><h3 class="panel-title">Details (<span data-bind="text: data.numInvoiceItems"></span>)</h3></div>
                        <table class="table table-striped table-condensed">
                            <colgroup>
                              <col class="col-md-1">
                              <col class="col-md-4">
                              <col class="col-md-2">
                              <col class="col-md-1">
                              <col class="col-md-1">
                              <col class="col-md-1">
                              <col class="col-md-2">
                            </colgroup>
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Count</th>
                                    <th>Discount</th>
                                    <th>VAT</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody data-bind="foreach: data.invoiceItems">
                                <tr>
                                    <td>
                                        <button class="btn btn-danger" data-bind="click: \$parent.deleteItem, disable: \$parent.data.isLocked">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        </button>
                                    </td>
                                    <td><input type="text" class="form-control" data-bind="textInput: description, disable: \$parent.data.isLocked"></input></td>
                                    <td><input type="number" class="form-control" data-bind="textInput: price, disable: \$parent.data.isLocked"></input></td>
                                    <td><input type="number" class="form-control" data-bind="textInput: count, disable: \$parent.data.isLocked"></input></td>
                                    <td><input type="number" class="form-control" data-bind="textInput: discount, disable: \$parent.data.isLocked"></input></td>
                                    <td><input type="number" class="form-control" data-bind="textInput: vat, disable: \$parent.data.isLocked"></input></td>
                                    <td><p class="form-control-static" data-bind="text: total"></p></td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <td>
                                    <button class="btn btn-success" data-bind="click: newItem, disable: data.isLocked">
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    </button>
                                </td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td colspan="2">
                                    <p class="form-control-static">
                                        Total excluding VAT:<br/>
                                        <strong>Total including VAT:</strong>
                                    </p>
                                </td>
                                <td>
                                    <p class="form-control-static">
                                        <span data-bind="text: data.totalExclVat"></span><br/>
                                        <strong><span data-bind="text: data.totalInclVat"></span></strong>
                                    </p>
                                </td>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="checkbox">
                  <label>
                    <input type="checkbox" data-bind="checked: data.isLocked">
                    Locked
                  </label>
                </div>
                <div class="checkbox">
                  <label>
                    <input type="checkbox" data-bind="checked: data.isPaid">
                    Paid
                  </label>
                </div>
                <div class="checkbox" data-bind="css: {disabled: data.isLocked}">
                  <label>
                    <input type="checkbox" value=""  data-bind="checked: data.isCredit, disable: data.isLocked">
                    Credit invoice
                  </label>
                </div>
                <div class="btn-group">
                  <button type="button" class="btn btn-success" data-bind="click: saveInvoice">
                      <span class="glyphicon glyphicon-save" aria-hidden="true"></span>
                      Save
                  </button>
                  <button type="button" class="btn btn-info" data-bind="click: doInvoiceReport">
                      <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
                      Print
                  </button>
                </div>
            </div>

            <div id="app-settings" data-bind="visible: currentView() == 'settings'">
                <div class="page-header">
                    <h1>Settings</h1>
                </div>

                <div>
                    <form class="form-horizontal">
                      <div class="form-group">
                        <label for="defNumDaysUntilPayment" class="control-label">Number of days until payment</label>
                        <input type="number" class="form-control" id="defNumDaysUntilPayment" placeholder="30" data-bind="value: settings.defaultNumDaysUntilPayment">
                      </div>
                      <div class="btn-group">
                        <button type="button" class="btn btn-success">
                          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                          OK
                        </button>
                      </div>
                    </form>
                </div>
            </div>

            <div id="app-debug" data-bind="visible: currentView() == 'debug'">
                <div class="page-header">
                    <h1>Debug and test</h1>
                </div>

                <div>
                    <form>
                        <p>
                        </p>

                        <div class="btn-group" role="group" aria-label="...">
                            <button type="button" class="btn btn-default" data-bind="click: spinnerVisible.bind(\$data,true), css: { active: spinnerVisible==true}">
                                Show spinner
                            </button>
                            <button type="button" class="btn btn-default" data-bind="click: spinnerVisible.bind(\$data,false), css: { active: spinnerVisible==false}">
                                Hide spinner
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </body>
